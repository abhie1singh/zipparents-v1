# Production Environment Configuration Template
# Copy this file to .env.prod and fill in your Firebase Production project credentials

NEXT_PUBLIC_FIREBASE_ENV=prod

# Firebase Production Project Configuration
# Get these values from Firebase Console > Project Settings
NEXT_PUBLIC_FIREBASE_API_KEY=your_prod_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-prod-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-prod-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-prod-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_prod_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_prod_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Admin SDK Configuration
FIREBASE_ENV=prod
FIREBASE_PROJECT_ID=your-prod-project-id

# Service Account Key (for server-side operations)
# Generate from Firebase Console > Project Settings > Service Accounts
# Paste the entire JSON as a single-line string
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-prod-project-id"...}
