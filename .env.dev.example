# Development Environment Configuration Template
# Copy this file to .env.dev and fill in your Firebase Dev project credentials

NEXT_PUBLIC_FIREBASE_ENV=dev

# Firebase Dev Project Configuration
# Get these values from Firebase Console > Project Settings
NEXT_PUBLIC_FIREBASE_API_KEY=your_dev_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-dev-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-dev-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-dev-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_dev_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_dev_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Admin SDK Configuration
FIREBASE_ENV=dev
FIREBASE_PROJECT_ID=your-dev-project-id

# Service Account Key (for server-side operations)
# Generate from Firebase Console > Project Settings > Service Accounts
# Paste the entire JSON as a single-line string
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-dev-project-id"...}
